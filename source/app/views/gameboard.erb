<div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form action='/game' class="form-horizontal" method="post">
                  <input type='hidden' name='player_1_id' value='<%= user1_id %>' />
                  <input type='hidden' name='player_2_id' value='<%= user2_id %>' />

                    <fieldset>
                        <legend class="text-center header">Play "The Rock", Parchment, Fiskars</legend>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                               <h3>Player 1</h3>
                              <select name="player_1_token_id" class="form-control">
                               <option value="The Rock">The Rock</option>
                               <option value="Parchment">Parchment</option>
                               <option value="Fiskars">Fiskars</option>
                              </select>
                            </div>
                        </div>

                         <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                              <h3>Player 2</h3>
                              <select name="player_2_token_id" class="form-control">
                               <option value="The Rock">The Rock</option>
                               <option value="Parchment">Parchment</option>
                               <option value="Fiskars">Fiskars</option>
                              </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
  <div class='col-md-4'>
    <img src="/images/rock.png">
  </div>
  <div class='col-md-4'>
    <img src="/images/paper.png">
  </div>
  <div class='col-md-4'>
    <img src="/images/scissors.png">
  </div>
</div>
