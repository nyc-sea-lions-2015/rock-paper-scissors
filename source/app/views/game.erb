<h1> Rock Paper Scissors </h1>

  <body>
    <form action="/games/<%= game.id %>/player_1_name" method="post">
      <input type="hidden" name="_method" value="put">
      <input type="text" name="player_1_name" value="<%= player_1_name %>">
      <input type="submit">
    </form>
    <% unless game.player_1_choice %>
      <% tokens.each do |token| %>
        <form action="/games/<%= game.id %>/player_1_choice_ID" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="player_1_choice_ID" value="<%= token.id %>">
          <input type="submit" value="<%= token.name %>">
        </form>
      <% end %>
    <% end %>

    <form action="/games/<%= game.id %>/player_2_name" method="post">
      <input type="hidden" name="_method" value="put">
      <input type="text" name="player_2_name" value="<%= player_2_name %>">
      <input type="submit">
    </form>
    <% unless game.player_2_choice %>
      <% tokens.each do |token| %>
        <form action="/games/<%= game.id %>/player_2_choice_ID" method="post">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="player_2_choice_ID" value="<%= token.id %>">
          <input type="submit" value="<%= token.name %>">
        </form>
      <% end %>
    <% end %>


  </body>

