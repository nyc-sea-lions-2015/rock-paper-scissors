<div id="results">
<h1>Choose your destiny!!</h1>
  <form id="game-form" action="/game" method="pqost">
    <div id="p1">
      <h2>Player 1, choose your Pokemon!</h2>
      <% pokemon.each do |name| %>
        <label>
          <input type="radio" name="pokemon1" value="<%= name %>">
          <img src="/img/<%= name %>.png">
        </label>
      <% end %>
    </div>

    <div id="p2">
      <h2>Player 2, choose your Pokemon!</h2>
      <% pokemon.each do |name| %>
        <label>
          <input type="radio" name="pokemon2" value="<%= name %>">
          <img src="/img/<%= name %>.png">
        </label>
      <% end %>
    </div>
  </form>
</div>





